{
    "compilerOptions": {
        "target": "ES2022",
        "useDefineForClassFields": true,
        "module": "ES2022",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "moduleResolution": "bundler",

        "strict": false,
        
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "types": [
            "vite-plugin-pwa/client"
        ]
    },
    "include": ["src"]
}